    display: grid;
    grid-template-columns: 1fr 100px 100px 80px 60px;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    align-items: center;
}

.transaction-row:first-child {
    font-weight: 600;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    border-radius: 8px;
    padding: 0.5rem 0;
}

.transaction-description-cell {
    font-weight: 500;
    color: var(--text-primary);
}

.transaction-category-cell {
    text-transform: capitalize;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.transaction-amount-cell {
    font-weight: 600;
    text-align: right;
}

.transaction-amount-cell.income {
    color: var(--success);
}

.transaction-amount-cell.expense {
    color: var(--error);
}

.transaction-date-cell {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.transaction-actions-cell {
    display: flex;
    gap: 0.5rem;
}

/* Contenedores de Presupuestos y Objetivos */
.budgets-container,
.goals-container {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.budgets-header,
.goals-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.budgets-header h3,
.goals-header h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
}

.budgets-grid,
.goals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
}

.budget-card,
.goal-card {
    background: var(--bg-primary);
    border-radius: 8px;
    padding: 1rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.budget-card h4,
.goal-card h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
}

.budget-progress,
.goal-progress {
    background: var(--bg-secondary);
    border-radius: 4px;
    height: 8px;
    margin: 0.5rem 0;
    overflow: hidden;
}

.budget-progress-bar,
.goal-progress-bar {
    height: 100%;
    background: var(--primary);
    transition: width 0.3s ease;
}

.budget-amount,
.goal-amount {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

/* Análisis */
.analytics-container {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.analytics-container h3 {
    margin: 0 0 1.5rem 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
}

.analytics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1.5rem;
}

.analytics-card {
    background: var(--bg-primary);
    border-radius: 8px;
    padding: 1rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.analytics-card h4 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
}

.analytics-card canvas {
    width: 100%;
    height: 200px;
}

/* Modal de Transacción */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    backdrop-filter: blur(5px);
}

.modal-content {
    background: var(--bg-card);
    border-radius: 16px;
    padding: 2rem;
    width: 90%;
    max-width: 500px;
    box-shadow: var(--shadow-xl);
    backdrop-filter: blur(20px);
    position: relative;
    animation: slideInUp 0.3s ease-out;
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.modal-header h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
}

.modal-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.modal-form .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.modal-form label {
    font-weight: 500;
    color: var(--text-primary);
    font-size: 0.9rem;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 1rem;
}

.form-actions .btn {
    min-width: 120px;
}

/* ========================================
   PRESUPUESTOS Y ALERTAS
   ======================================== */
.budget-card {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.budget-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.budget-card.budget-status-good {
    border-left: 4px solid var(--success);
}

.budget-card.budget-status-warning {
    border-left: 4px solid var(--warning);
}

.budget-card.budget-status-critical {
    border-left: 4px solid var(--error);
    background: linear-gradient(135deg, var(--error-light) 0%, var(--bg-card) 100%);
}

.budget-card.budget-status-exceeded {
    border-left: 4px solid var(--error);
    background: linear-gradient(135deg, var(--error-light) 0%, var(--bg-card) 100%);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.02); }
    100% { transform: scale(1); }
}

.budget-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.budget-header h4 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    text-transform: capitalize;
}

.budget-status {
    font-size: 1.2rem;
}

.budget-progress {
    background: var(--bg-secondary);
    border-radius: 8px;
    height: 12px;
    margin: 1rem 0;
    overflow: hidden;
    position: relative;
}

.budget-progress-bar {
    height: 100%;
    background: var(--primary);
    transition: width 0.3s ease;
    position: relative;
}

.budget-progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.3) 50%, transparent 100%);
    animation: shimmer 2s infinite;
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.budget-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.budget-amount {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
}

.budget-remaining {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.budget-actions {
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
}

.budget-actions .btn {
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
}

/* Alertas de Presupuesto */
.budget-alert {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 0.5rem;
    border-left: 4px solid;
}

.budget-alert.alert-info {
    background: var(--info-light);
    border-left-color: var(--info);
}

.budget-alert.alert-warning {
    background: var(--warning-light);
    border-left-color: var(--warning);
}

.budget-alert.alert-critical {
    background: var(--error-light);
    border-left-color: var(--error);
}

.budget-alert-icon {
    font-size: 1.2rem;
}

.budget-alert-content {
    flex: 1;
}

.budget-alert-title {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
}

.budget-alert-message {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

/* Recomendaciones de Presupuesto */
.budget-recommendations {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(0, 0, 0, 0.05);
    margin-bottom: 1.5rem;
}

.budget-recommendations h3 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
}

.recommendation-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: var(--bg-primary);
    border-radius: 8px;
    margin-bottom: 0.5rem;
    border-left: 4px solid var(--info);
}

.recommendation-item:last-child {
    margin-bottom: 0;
}

.recommendation-content {
    flex: 1;
}

.recommendation-title {
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
}

.recommendation-description {
    font-size: 0.8rem;
    color: var(--text-secondary);
}

.recommendation-actions {
    display: flex;
    gap: 0.5rem;
}

/* Insights de Presupuesto */
.budget-insights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.insight-card {
    background: var(--bg-card);
    border-radius: 8px;
    padding: 1rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.insight-card h4 {
    margin: 0 0 0.5rem 0;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.insight-value {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 0.25rem;
}

.insight-description {
    font-size: 0.8rem;
    color: var(--text-secondary);
    line-height: 1.4;
}

/* Modal de Presupuesto */
.budget-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    backdrop-filter: blur(5px);
}

.budget-modal-content {
    background: var(--bg-card);
    border-radius: 16px;
    padding: 2rem;
    width: 90%;
    max-width: 500px;
    box-shadow: var(--shadow-xl);
    backdrop-filter: blur(20px);
    position: relative;
    animation: slideInUp 0.3s ease-out;
}

.budget-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.budget-modal-header h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
}

.budget-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.budget-form .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.budget-form label {
    font-weight: 500;
    color: var(--text-primary);
    font-size: 0.9rem;
}

.budget-form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 1rem;
}

.budget-form-actions .btn {
    min-width: 120px;
}

/* ========================================
   CALCULATOR
   ======================================== */
.calc-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    align-items: start;
    max-width: 800px;
    margin: 0 auto;
}

@media (min-width: 768px) {
    .calc-container {
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    }
}

.calc-inputs {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
}

.calc-results h3 {
    margin-bottom: var(--space-sm);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    color: var(--text-primary);
}

.gastos-list {
    max-height: 300px;
    overflow-y: auto;
    margin-bottom: var(--space-sm);
}

.gasto-item {
    background: var(--bg-secondary);
    padding: var(--space-sm);
    margin-bottom: var(--space-xs);
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.gasto-info {
    flex: 1;
}

.gasto-monto {
    font-weight: 600;
    color: var(--accent);
    font-size: 17px;
}

.gasto-categoria {
    font-size: 15px;
    color: var(--text-secondary);
    margin-top: 2px;
}

.total {
    background: var(--bg-secondary);
    padding: var(--space-sm);
    border-radius: 8px;
    text-align: center;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

/* ========================================
   NOTIFICATIONS
   ======================================== */
.notification {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 12px 16px;
    border-radius: 8px;
    color: var(--text-white);
    font-weight: 500;
    font-size: 15px;
    z-index: 10000;
    max-width: 300px;
    animation: slideInRight 0.3s ease-out;
    box-shadow: var(--shadow-lg);
}

.notification-success {
    background: var(--success);
}

.notification-error {
    background: var(--error);
}

.notification-warning {
    background: var(--warning);
}

.notification-info {
    background: var(--info);
}

/* ========================================
   FOOTER
   ======================================== */
.footer {
    background: var(--bg-secondary);
    color: var(--text-secondary);
    padding: 3rem 0 1rem 0;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    margin-top: 4rem;
}

.footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
}

.footer-section h3 {
    color: var(--text-primary);
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.footer-section h4 {
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.footer-section p {
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 0.5rem;
}

.footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.footer-section ul li {
    margin-bottom: 0.5rem;
}

.footer-section ul li a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section ul li a:hover {
    color: var(--primary);
}

.footer-bottom {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding-top: 1.5rem;
}

.footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.footer-bottom p {
    color: var(--text-secondary);
    margin: 0;
}

.footer-links {
    display: flex;
    gap: 1.5rem;
}

.footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
}

.footer-links a:hover {
    color: var(--primary);
}

/* ========================================
   CALL TO ACTION
   ======================================== */
.cta-section {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="cta-grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23cta-grain)"/></svg>');
    opacity: 0.3;
}

.cta-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
}

.cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
}

.cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    line-height: 1.5;
}

.cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

.cta-actions .btn {
    min-width: 160px;
}

/* ========================================
   ACCESO RÁPIDO
   ======================================== */
.quick-access {
    background: var(--bg-light);
}

.quick-access-header {
    text-align: center;
    margin-bottom: 3rem;
}

.quick-access-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
}

.quick-access-header p {
    font-size: 1.2rem;
    color: var(--text-secondary);
}

.quick-access-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
}

.quick-access-card {
    background: var(--bg-card);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    box-shadow: var(--shadow-sm);
}

.quick-access-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
}

.quick-access-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.quick-access-card h3 {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.quick-access-card p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0;
}

/* ========================================
   ACERCA DE
   ======================================== */
.about-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.about-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
}

.about-content p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 3rem;
}

.about-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.stat-item {
    text-align: center;
    padding: 2rem;
    background: var(--bg-card);
    border-radius: 16px;
    box-shadow: var(--shadow-sm);
    transition: transform 0.3s ease;
}

.stat-item:hover {
    transform: translateY(-5px);
}

.stat-item h3 {
    font-size: 3rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.5rem;
}

.stat-item p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 0;
}

/* ========================================
   MODO DESARROLLO
   ======================================== */
.dev-mode-indicator {
    background: linear-gradient(90deg, #ff6b6b, #ff8e8e);
    color: white;
    text-align: center;
    padding: 0.5rem;
    font-size: 0.9rem;
    font-weight: 500;
    animation: pulse-dev 2s infinite;
}

@keyframes pulse-dev {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

/* ========================================
   ESTRUCTURA GENERAL
   ======================================== */
body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

main {
    flex: 1;
}

